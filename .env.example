# PostgreSQL Database
DATABASE_URL=postgresql://user:password@localhost:5432/chat_auth_db

# Server Configuration
NODE_ENV=production
PORT=3000

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRY=7d

# OTP Configuration (in minutes)
OTP_EXPIRY_MINUTES=15
OTP_RESEND_COOLDOWN_MINUTES=5
OTP_MAX_ATTEMPTS=3

# Email Configuration (Brevo)
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USER=your_brevo_email@example.com
SMTP_PASSWORD=your_brevo_api_key
SMTP_FROM_EMAIL=noreply@yourchatapp.com
SMTP_FROM_NAME=ChatApp

# App Configuration
APP_NAME=ChatApp
APP_URL=http://localhost:3000

# Logging
LOG_LEVEL=info
