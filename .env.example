# ============================================
# CHAT APP BACKEND - RAILWAY ENVIRONMENT SETUP
# ============================================
# Copy this file to your Railway dashboard and set actual values

# Server Configuration
NODE_ENV=production
PORT=3000

# Database (PostgreSQL on Railway)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@railway.railway.internal:5432/chatdb

# JWT Authentication
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here_min_32_chars

# Email Service (Brevo SMTP)
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USER=your_brevo_email@example.com
SMTP_PASSWORD=your_brevo_smtp_key
SMTP_FROM_EMAIL=noreply@yourapp.com
SMTP_FROM_NAME=YourAppName

# OTP Configuration (optional - has defaults)
OTP_EXPIRY_MINUTES=15
OTP_RESEND_COOLDOWN_MINUTES=5
OTP_MAX_ATTEMPTS=3

# CORS Configuration (optional)
ALLOWED_ORIGINS=https://yourfrontend.com,https://yourapp.railway.app

# Logging
LOG_LEVEL=info

# App Configuration
APP_NAME=ChatApp
APP_URL=https://yourapp.railway.app
