{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile"
  },
  "deploy": {
    "startCommand": "npm start",
    "restartPolicyMaxRetries": 5,
    "restartPolicyWindowSeconds": 60
  },
  "plugins": [
    "postgresql"
  ],
  "variables": {
    "NODE_ENV": "production",
    "PORT": "3000",
    "OTP_EXPIRY_MINUTES": "15",
    "OTP_RESEND_COOLDOWN_MINUTES": "5",
    "OTP_MAX_ATTEMPTS": "3"
  }
}
